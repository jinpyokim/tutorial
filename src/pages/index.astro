---
import Navigation from '../components/Navigation.astro';
import '../styles/global.css';

const pageTitle = "Welcome to Malleable Software LLC";
const companyInfo = {
  name: "Malleable Software LLC",
  description: "A software development company focused on creating flexible and adaptable solutions.",
  location: "USA",
  services: ["AI Web Development", "AI Mobile Apps", "Cloud Solutions"],
};
const isUnderConstruction = true;
const contactEmail = "info@malleablesoft.com";
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{pageTitle}</title>
	</head>
	<body>
		<Navigation />
		<h1>{pageTitle}</h1>
		<p>{companyInfo.description}</p>
		<p>Location: {companyInfo.location}</p>
		<p>Services offered:</p>
		<ul>
			{companyInfo.services.map(service => (
				<li>{service}</li>
			))}
		</ul>
		{isUnderConstruction && (
			<p>This website is currently under construction. Please check back later!</p>
		)}
		<p>For inquiries, contact us at <a href={`mailto:${contactEmail}`}>{contactEmail}</a>.</p>
		<p>Thank you for your patience!</p>
		<!-- Add any additional content or components here -->

		
	</body>
</html>
